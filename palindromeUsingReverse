import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        String result="No";
        Scanner sc=new Scanner(System.in);
        String A=sc.next();
        /* Enter your code here. Print output to STDOUT. */
        String spaceText=A.replaceAll("\\s","").toLowerCase();
        StringBuffer plainStr=new StringBuffer(spaceText);
        StringBuffer reverse=plainStr.reverse();
        if(reverse.toString().equals(spaceText)){
            result="Yes";
        }
        System.out.println(result);
        
        
    }
}



